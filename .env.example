# Django Settings
DJANGO_SECRET_KEY=your-secure-secret-key-change-in-production
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com
ENVIRONMENT=development

# Database - Neon PostgreSQL (use pooler endpoint for connection pooling)
# For local dev with SQLite, leave empty or use: sqlite:///db.sqlite3
DATABASE_URL=postgresql://user:password@your-neon-host.neon.tech/dbname?sslmode=require

# External API Keys (replace with your own keys)
NEWS_API_KEY=your-news-api-key-here
GEMINI_API_KEY=your-gemini-api-key-here
BRAVE_API_KEY=your-brave-api-key-here

# CORS Settings (add your Cloud Run URL and Firebase URL for staging/production)
CORS_ALLOWED_ORIGINS=http://localhost:8081,http://localhost:19006
# Staging example: CORS_ALLOWED_ORIGINS=https://bookofmonth.web.app

# Token Expiration (days)
TOKEN_EXPIRATION_DAYS=14

# Account Lockout
MAX_FAILED_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15

# Email Configuration
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=localhost
EMAIL_PORT=25
EMAIL_USE_TLS=False
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@bookofmonth.com

# Sentry (production only)
SENTRY_DSN=

# Django Q2 Workers
Q_CLUSTER_WORKERS=2

# Logging
LOG_LEVEL=INFO

# Frontend (Vite build-time variable)
# VITE_API_BASE_URL=https://bookofmonth-api-xxxx-ew.a.run.app/api
