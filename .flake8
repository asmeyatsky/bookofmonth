[flake8]
max-line-length = 100
exclude =
    .git,
    __pycache__,
    migrations,
    .venv,
    venv,
    node_modules,
    frontend,
    build,
    dist

# Ignore some errors that conflict with Black formatter
ignore =
    E203,
    E266,
    E501,
    W503,
    E722

per-file-ignores =
    __init__.py:F401
    */tests/*.py:S101

max-complexity = 10
